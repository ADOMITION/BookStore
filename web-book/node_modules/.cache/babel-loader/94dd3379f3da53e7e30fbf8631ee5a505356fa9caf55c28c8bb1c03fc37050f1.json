 <el-table v-else>\r\n          <!-- 表格列定义... -->\r\n        </el-table>\r\n      </el-card>\r\n\r\n      <!-- 收货信息卡片 -->\r\n      <el-card class=\"address-card animated fadeInUp delay-1\">\r\n        <div slot=\"header\" class=\"card-header-decor\">\r\n          <span class=\"decor-line\"></span>\r\n          <h3 class=\"card-title\">\r\n            <i class=\"el-icon-location-information\"></i>\r\n            收货信息\r\n          </h3>\r\n          <span class=\"decor-line\"></span>\r\n        </div>\r\n\r\n        <!-- 动态表单验证 -->\r\n        <el-form class=\"floating-label-form\">\r\n          <!-- 表单项目... -->\r\n        </el-form>\r\n      </el-card>\r\n\r\n      <!-- 价格汇总面板 -->\r\n      <div class=\"summary-panel animated fadeInUp delay-2\">\r\n        <div class=\"price-breakdown\">\r\n          <div class=\"price-item\">\r\n            <span>商品总价</span>\r\n            <span class=\"value\">¥{{ total.toFixed(2) }}</span>\r\n          </div>\r\n          <div class=\"price-item discount\">\r\n            <span>优惠减免</span>\r\n            <span class=\"value\">-¥0.00</span>\r\n          </div>\r\n          <div class=\"price-item total\">\r\n            <span>应付总额</span>\r\n            <span class=\"value\">¥{{ total.toFixed(2) }}</span>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- 3D效果按钮 -->\r\n        <el-button\r\n            class=\"submit-btn neumorphic\"\r\n            @click=\"handleSubmit\">\r\n          <i class=\"el-icon-wallet\"></i>\r\n          立即支付\r\n        </el-button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n<script>\r\nexport default {\r\n  data() {\r\n    // 手机号验证规则\r\n    const validatePhone = (rule, value, callback) => {\r\n      if (!/^1[3-9]\\d{9}$/.test(value)) {\r\n        callback(new Error('请输入正确的手机号码'));\r\n      } else {\r\n        callback();\r\n      }\r\n    };\r\n\r\n    return {\r\n      confirmData: null,\r\n      form: {\r\n        address: '',\r\n        recipient: '',\r\n        tel: ''\r\n      },\r\n      rules: {\r\n        address: [\r\n          { required: true, message: '请输入收货地址', trigger: 'blur' }\r\n        ],\r\n        recipient: [\r\n          { required: true, message: '请输入收件人姓名', trigger: 'blur' }\r\n        ],\r\n        tel: [\r\n          { required: true, message: '请输入联系方式', trigger: 'blur' },\r\n          { validator: validatePhone, trigger: 'blur' }\r\n        ]\r\n      },\r\n      total: 0\r\n    };\r\n  },\r\n  created() {\r\n    this.loadConfirmData();\r\n  },\r\n  methods: {\r\n    async loadConfirmData() {\r\n      try {\r\n        const oiid = this.$route.query.oiid;\r\n        const { data } = await this.$axios.get(\r\n            `${this.$httpUrl}/order/confirm?oiid=${oiid}`\r\n        );\r\n\r\n        if (data.code === 200) {\r\n          this.confirmData = data.data;\r\n          this.total = data.data.discountPrice * data.data.orderItem.quantity;\r\n        }\r\n      } catch (error) {\r\n        this.$message.error('获取订单信息失败');\r\n      }\r\n    },\r\n\r\n    handleSubmit() {\r\n      this.$refs.formRef.validate(async valid => {\r\n        if (valid) {\r\n          try {\r\n            const { data } = await this.$axios.post(\r\n                `${this.$httpUrl}/order/create`,\r\n                {\r\n                  oiid: this.$route.query.oiid,\r\n                  ...this.form\r\n                }\r\n            );\r\n\r\n            if (data.code === 200) {\r\n              this.$router.push({\r\n                path: '/pay',\r\n                query: {\r\n                  oid: data.data.oid,\r\n                  total: data.data.total\r\n                }\r\n              });\r\n            }\r\n          } catch (error) {\r\n            this.$message.error('提交订单失败');\r\n          }\r\n        }\r\n      });\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.confirm-container {\r\n  padding: 20px 200px;\r\n  background: #f5f5f5;\r\n}\r\n\r\n.breadcrumb {\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.main-content {\