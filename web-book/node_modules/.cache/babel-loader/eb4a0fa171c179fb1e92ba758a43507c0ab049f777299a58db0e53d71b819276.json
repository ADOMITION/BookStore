s.$axios.post(this.$httpUrl + api, this.formData);\n          if (data.code === 200) {\n            this.$message.success('操作成功');\n            this.dialogVisible = false;\n            this.loadCategories();\n          }\n        }\n      });\n    },\n    // 删除分类\n    async deleteCategory(id) {\n      const {\n        data\n      } = await this.$axios.get(this.$httpUrl + `/category/del?id=${id}`);\n      if (data.code === 200) {\n        this.$message.success('删除成功');\n        this.loadCategories();\n      }\n    },\n    // 分页处理\n    handleSizeChange(size) {\n      this.pagination.size = size;\n      this.loadCategories();\n    },\n    handleCurrentChange(current) {\n      this.pagination.current = current;\n      this.loadCategories();\n    },\n    // 重置搜索\n    resetSearch() {\n      this.searchParams = {\n        name: ''\n      };\n      this.loadCategories();\n    }\n  }\n};","map":{"version":3,"names":["name","data","searchParams","tableData","loading","dialogVisible","dialogType","formData","initFormData","pagination","current","size","total","formRules","required","message","trigger","computed","dialogTitle","created","loadCategories","methods","id","params","pageNum","pageSize","param","$axios","post","$httpUrl","code","error","console","openDialog","type","row","$nextTick","submitForm","$refs","categoryForm","validate","valid","api","$message","success","deleteCategory","get","handleSizeChange","handleCurrentChange","resetSearch"],"sources":["src/admin/CategoryManage.vue"],"sourcesContent":["<template>\r\n  <div class=\"app-container\">\r\n    <!-- 搜索区域 -->\r\n    <div class=\"filter-container\">\r\n      <el-input\r\n          v-model=\"searchParams.name\"\r\n          placeholder=\"请输入分类名称\"\r\n          prefix-icon=\"el-icon-collection-tag\"\r\n          class=\"filter-item\"\r\n          @keyup.enter.native=\"loadCategories\"\r\n      />\r\n\r\n      <div class=\"operation-btns\">\r\n        <el-button\r\n            type=\"primary\"\r\n            icon