{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  name: \"CategoryPage\",\n  data() {\n    return {\n      beans: [],\n      total: 0,\n      pageNum: 1,\n      pageSize: 12\n    };\n  },\n  created() {\n    this.refresh();\n  },\n  watch: {\n    '$route'() {\n      this.refresh();\n    }\n  },\n  methods: {\n    async refresh() {\n      let id = this.$route.query.id;\n      let url = this.$httpUrl + \"/category/\" + id + \"/books\";\n      try {\n        const res = await this.$axios.post(url, {\n          pageNum: this.pageNum,\n          pageSize: this.pageSize,\n          param: {\n            cid: id\n          }\n        });\n        if (res.data.code === 200) {\n          this.beans = res.data?.data || [];\n          this.total = res.data?.total || 0;\n        }\n      } catch (error) {\n        this.$message.error('出现错误');\n        console.log(error);\n      }\n    },\n    handleSkip(id) {\n      this.$router.push({\n        path: '/book',\n        query: {\n          id: id\n        }\n      });\n    },\n    handlePageChange(page) {\n      this.pageNum = page;\n      this.refresh();\n    },\n    handleSizeChange(size) {\n      this.pageSize = size;\n      this.refresh();\n    }\n  }\n};","map":{"version":3,"names":["name","data","beans","total","pageNum","pageSize","created","refresh","watch","$route","methods","id","query","url","$httpUrl","res","$axios","post","param","cid","code","error","$message","console","log","handleSkip","$router","push","path","handlePageChange","page","handleSizeChange","size"],"sources":["src/user/CategoryPage.vue"],"sourcesContent":["<template>\r\n  <div class=\"category-container\">\r\n    <!-- 分类标题 -->\r\n    <div class=\"category-header\">\r\n      <h2 class=\"category-title\">\r\n        {{ categoryName || '图书分类' }}\r\n        <span class=\"book-count\">（共 {{ total }} 本）</span>\r\n      </h2>\r\n      <el-divider class=\"custom-divider\"></el-divider>\r\n    </div>\r\n\r\n    <!-- 加载状态 -->\r\n    <div v-loading=\"loading\" element-loading-text=\"努力加载中...\" element-loading-background=\"rgba(255, 255, 255, 0.8)\">\r\n      <!-- 书籍列表 -->\r\n      <div class=\"book-list\" v-if=\"beans.length > 0\">\r\n        <el-row :gutter=\"30\" type=\"flex\" justify=\"start\">\r\n          <el-col\r\n              v-for=\"item in beans\"\r\n              :key=\"item.id\"\r\n              :xs=\"12\" :sm=\"8\" :md=\"6\" :lg=\"4\"\r\n              class=\"book-col\"\r\n          >\r\n            <el-card\r\n                class=\"book-card\"\r\n                :body-style=\"{padding:'0px'}\"\r\n                shadow=\"hover\"\r\n                @click.native=\"handleSkip(item.id)\"\r\n            >\r\n              <!-- 封面图片 -->\r\n              <div class=\"cover-wrapper\">\r\n                <el-image\r\n                    :src=\"item.image\"\r\n                    :alt=\"item.name\"\r\n                    fit=\"cover\"\r\n                    class=\"book-cover\"\r\n                    :preview-src-list=\"[item.image]\"\r\n                >\r\n                  <template #error>\r\n                    <div class=\"cover-error\">\r\n                      <i class=\"el-icon-picture-outline\"></i>\r\n                      <p>封面加载失败</p>\r\n                    </div>\r\n                  </template>\r\n                </el-image>\r\n              </div>\r\n\r\n              <!-- 书籍信息 -->\r\n              <div class=\"book-info\">\r\n                <h3 class=\"title\">{{ item.name }}</h3>\r\n                <p class=\"author\">{{ item.author }}</p>\r\n                <p class=\"press\">{{ item.press }}</p>\r\n\r\n                <!-- 价格评分 -->\r\n                <div class=\"price-rating\">\r\n                  <div class=\"price\">¥{{ (item.price || 0).toFixed(2) }}</div>\r\n                  <div class=\"rating\">\r\n                    <el-rate\r\n                        v-model=\"item.mark\"\r\n                        :max=\"10\"\r\n                        disabled\r\n                        :colors=\"['#ff4443', '#ff4443', '#ff4443']\"\r\n                        :allow-half=\"true\"\r\n                        class=\"rating-stars\"\r\n                    />\r\n                    <span class=\"rating-text\">{{ item.mark || '暂无评分' }}</span>\r\n                  </div>\r\n                </div>\r\n              </div>\r\n            </el-card>\r\n          </el-col>\r\n        </el-row>\r\n\r\n        <!-- 分页 -->\r\n        <el-pagination\r\n            v-if=\"total > 0\"\r\n            class=\"custom-pagination\"\r\n            background\r\n            layout=\"prev, pager, next, jumper, sizes, total\"\r\n            :page-sizes=\"[12, 24, 48, 96]\"\r\n            :current-page=\"pageNum\"\r\n            :page-size=\"pageSize\"\r\n            :total=\"total\"\r\n            @current-change=\"handlePageChange\"\r\n            @size-change=\"handleSizeChange\"\r\n        />\r\n      </div>\r\n\r\n      <!-- 空状态 -->\r\n      <el-empty v-else description=\"暂时没有相关书籍\" class=\"empty-state\"></el-empty>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: \"CategoryPage\",\r\n  data(){\r\n    return{\r\n      beans:[],\r\n      total: 0,\r\n      pageNum: 1,\r\n      pageSize: 12,\r\n    }\r\n  },\r\n  created() {\r\n    this.refresh();\r\n  },\r\n  watch: {\r\n    '$route'() {\r\n      this.refresh();\r\n    }\r\n  },\r\n  methods:{\r\n     async refresh() {\r\n      let id = this.$route.query.id\r\n      let url = this.$httpUrl + \"/category/\" + id +\"/books\";\r\n      try{\r\n        const res = (await this.$axios.post(url,{\r\n          pageNum: this.pageNum,\r\n          pageSize: this.pageSize,\r\n          param: { cid: id }\r\n        }));\r\n        if(res.data.code === 200){\r\n          this.beans = res.data?.data || [];\r\n          this.total = res.data?.total || 0;\r\n        }\r\n      }catch (error){\r\n        this.$message.error('出现错误');\r\n        console.log(error)\r\n       }\r\n    },\r\n    handleSkip(id){\r\n      this.$router.push({\r\n        path: '/book',\r\n        query:{\r\n          id:id\r\n        }\r\n      })\r\n    },\r\n    handlePageChange(page) {\r\n      this.pageNum = page;\r\n      this.refresh();\r\n    },\r\n    handleSizeChange(size) {\r\n      this.pageSize = size;\r\n      this.refresh();\r\n    },\r\n\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.rating-star {\r\n  font-size: 14px;\r\n  animation: twinkle 1.5s ease-in-out infinite;\r\n}\r\n.result-grid {\r\n  margin: 20px 0;\r\n}\r\n\r\n.price-rating {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n  margin-top: 8px;\r\n}\r\n\r\n.rating-box {\r\n  background: #aea49a;\r\n  border-radius: 4px;\r\n  padding: 2px 6px;\r\n  font-size: 12px;\r\n  color: #ffffff;\r\n}\r\n\r\n.book-title {\r\n  font-size: 14px;\r\n  font-weight: bold;\r\n  margin: 5px 0;\r\n  overflow: hidden;\r\n  text-overflow: ellipsis;\r\n  white-space: nowrap;\r\n}\r\n\r\n.book-author {\r\n  color: #909399;\r\n  font-size: 12px;\r\n  margin: 5px 0;\r\n}\r\n\r\n.book-press {\r\n  color: #909399;\r\n  font-size: 12px;\r\n  margin: 5px 0;\r\n}\r\n\r\n.price {\r\n  color: #ff4443;\r\n  font-size: 20px;\r\n  font-weight: bold;\r\n}\r\n\r\n.image-placeholder {\r\n  height: 276px;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  background: #f5f7fa;\r\n  color: #c0c4cc;\r\n}\r\n</style>"],"mappings":";AA8FA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,KAAA;MACAC,KAAA;MACAC,OAAA;MACAC,QAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,OAAA;EACA;EACAC,KAAA;IACA,QAAAC,CAAA;MACA,KAAAF,OAAA;IACA;EACA;EACAG,OAAA;IACA,MAAAH,QAAA;MACA,IAAAI,EAAA,QAAAF,MAAA,CAAAG,KAAA,CAAAD,EAAA;MACA,IAAAE,GAAA,QAAAC,QAAA,kBAAAH,EAAA;MACA;QACA,MAAAI,GAAA,cAAAC,MAAA,CAAAC,IAAA,CAAAJ,GAAA;UACAT,OAAA,OAAAA,OAAA;UACAC,QAAA,OAAAA,QAAA;UACAa,KAAA;YAAAC,GAAA,EAAAR;UAAA;QACA;QACA,IAAAI,GAAA,CAAAd,IAAA,CAAAmB,IAAA;UACA,KAAAlB,KAAA,GAAAa,GAAA,CAAAd,IAAA,EAAAA,IAAA;UACA,KAAAE,KAAA,GAAAY,G