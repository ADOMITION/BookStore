{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.filter.js\";\nimport \"core-js/modules/es.iterator.map.js\";\nexport default {\n  name: \"NavBar\",\n  data() {\n    return {\n      bean: [],\n      loading: true\n    };\n  },\n  computed: {\n    // 添加数据清洗逻辑\n    processedBooks() {\n      return this.bean.map(category => ({\n        ...category,\n        books: (category.books || []).map(book => ({\n          ...book,\n          // 确保评分格式正确\n          mark: book.mark ? book.mark.toFixed(1) : '0.0'\n        })).filter(book => book.id)\n      })) // 过滤无效数据\n      .filter(category => category.books.length > 0); // 过滤空分类\n    }\n  },\n  created() {\n    this.fetchData();\n  },\n  methods: {\n    async fetchData() {\n      try {\n        const res = await this.$axios.get(this.$httpUrl + '/book/preview');\n        console.log(res);\n        if (res.data.code === 200) {\n          this.bean = res.data.data;\n        }\n      } catch (error) {\n        console.error('数据加载失败:', error);\n      }\n    },\n    handleMore(id) {\n      this.$router.push({\n        path: '/category',\n        query: {\n          id: id\n        }\n      });\n    },\n    handleSkip(id) {\n      this.$router.push({\n        path: '/book',\n        query: {\n          id: id\n        }\n      });\n    }\n  }\n};","map":{"version":3,"names":["name","data","bean","loading","computed","processedBooks","map","category","books","book","mark","toFixed","filter","id","length","created","fetchData","methods","res","$axios","get","$httpUrl","console","log","code","error","handleMore","$router","push","path","query","handleSkip"],"sources":["src/user/home/NvaBar.vue"],"sourcesContent":["<template>\r\n  <div class=\"page-container\">\r\n    <div class=\"category-list\">\r\n      <el-row\r\n          v-for=\"row in processedBooks\"\r\n          :key=\"row.id\"\r\n          class=\"category-row\"\r\n          :gutter=\"30\">\r\n\r\n        <el-col :span=\"24\">\r\n          <div class=\"category-header\">\r\n            <h3 class=\"category-title\">{{row.name}}</h3>\r\n            <el-button\r\n                type=\"primary\"\r\n                icon=\"el-icon-arrow-right\"\r\n                circle\r\n                @click=\"handleMore(row.id)\"\r\n                class=\"more-btn\"/>\r\n          </div>\r\n        </el-col>\r\n\r\n        <el-col\r\n            v-for=\"item in row.books\"\r\n            :key=\"item.id\"\r\n            :span=\"6\"\r\n            class=\"book-col\">\r\n\r\n          <el-card\r\n              class=\"book-card\"\r\n              shadow=\"hover\"\r\n              @click.native=\"handleSkip(item.id)\">\r\n\r\n            <div class=\"cover-container\">\r\n              <el-image\r\n                  :src=\"item.image\"\r\n                  class=\"book-cover\"\r\n                  fit=\"cover\">\r\n                <div slot=\"error\" class=\"image-placeholder\">\r\n                  <i class=\"el-icon-picture-outline\"></i>\r\n                </div>\r\n              </el-image>\r\n            </div>\r\n\r\n            <div class=\"book-info\">\r\n              <p class=\"book-title\">{{ item.name }}</p>\r\n              <p class=\"book-author\">{{ item.author }}</p>\r\n\r\n              <div class=\"meta-info\">\r\n                <div class=\"price-tag\">\r\n                  <span class=\"price-icon\">¥</span>\r\n                  <span class=\"price-value\">{{ item.price }}</span>\r\n                </div>\r\n                <div class=\"rating-tag\">\r\n                  <i class=\"el-icon-star-off rating-icon\"></i>\r\n                  <span class=\"rating-value\">{{ item.mark || '暂无评分' }}</span>\r\n                </div>\r\n              </div>\r\n            </div>\r\n          </el-card>\r\n        </el-col>\r\n      </el-row>\r\n    </div>\r\n\r\n    <el-empty\r\n        v-if=\"!loading && processedBooks.length === 0\"\r\n        description=\"暂时还没有图书上架哦~\"\r\n        class=\"empty-tip\">\r\n    </el-empty>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: \"NavBar\",\r\n  data() {\r\n    return {\r\n      bean: [],\r\n      loading: true\r\n    };\r\n  },\r\n  computed: {\r\n    // 添加数据清洗逻辑\r\n    processedBooks() {\r\n      return this.bean.map(category => ({\r\n        ...category,\r\n        books: (category.books || []).map(book => ({\r\n          ...book,\r\n          // 确保评分格式正确\r\n          mark: book.mark ? book.mark.toFixed(1) : '0.0'}))\r\n            .filter(book => book.id)})) // 过滤无效数据\r\n            .filter(category => category.books.length > 0); // 过滤空分类\r\n    }\r\n  },\r\n\r\n  created() {\r\n    this.fetchData();\r\n  },\r\n\r\n  methods: {\r\n    async fetchData() {\r\n      try {\r\n        const res = await this.$axios.get(this.$httpUrl+'/book/preview');\r\n        console.log(res)\r\n        if (res.data.code === 200) {\r\n          this.bean = res.data.data;\r\n        }\r\n      } catch (error) {\r\n        console.error('数据加载失败:', error);\r\n      }\r\n    },\r\n    handleMore(id){\r\n      this.$router.push({\r\n        path: '/category',\r\n        query:{\r\n          id:id\r\n        }\r\n      })\r\n    },\r\n    handleSkip(id){\r\n      this.$router.push({\r\n        path: '/book',\r\n        query:{\r\n          id:id\r\n        }\r\n      })\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.page-container {\r\n  background: #f5f3f1;\r\n  min-height: 100vh;\r\n  padding: 40px 0;\r\n}\r\n\r\n.category-row {\r\n  margin: 0 10%;\r\n  padding: 30px 0;\r\n  border-bottom: 1px solid #e8e4e0;\r\n}\r\n\r\n.category-header {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: space-between;\r\n  margin-bottom: 30px;\r\n}\r\n\r\n.category-title {\r\n  font-size: 24px;\r\n  color: #59493f;\r\n  margin: 0;\r\n  font-weight: 500;\r\n  letter-spacing: 1px;\r\n}\r\n\r\n.more-btn {\r\n  background: #a9927d;\r\n  border-color: #a9927d;\r\n  transition: all 0.3s;\r\n}\r\n\r\n.more-btn:hover {\r\n  transform: translateX(5px);\r\n  background: #8c7b69;\r\n}\r\n\r\n.book-col {\r\n  margin-bottom: 30px;\r\n  padding: 0 15px;\r\n}\r\n\r\n.book-card {\r\n  border-radius: 12px;\r\n  overflow: hidden;\r\n  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);\r\n  border: none;\r\n}\r\n\r\n.book-card:hover {\r\n  transform: translateY(-5px);\r\n  box-shadow: 0 12px 24px rgba(89,73,63,0.1);\r\n}\r\n\r\n.cover-container {\r\n  position: relative;\r\n  padding-top: 138%; /* 保持封面比例 1:0.69 */\r\n}\r\n\r\n.book-cover {\r\n  position: absolute;\r\n  top: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 100%;\r\n  border-radius: 8px 8px 0 0;\r\n}\r\n\r\n.book-info {\r\n  padding: 16px;\r\n  background: #fff;\r\n}\r\n\r\n.book-title {\r\n  font-size: 16px;\r\n  color: #59493f;\r\n  line-height: 1.4;\r\n  margin: 0 0 8px;\r\n  font-weight: 500;\r\n  display: -webkit-box;\r\n  -webkit-box-orient: vertical;\r\n  -webkit-line-clamp: 2;\r\n  overflow: hidden;\r\n}\r\n\r\n.book-author {\r\n  font-size: 12px;\r\n  color: #9e8e7e;\r\n  margin: 0 0 12px;\r\n}\r\n\r\n.meta-info {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n}\r\n\r\n.price-tag {\r\n  display: flex;\r\n  align-items: baseline;\r\n}\r\n\r\n.price-icon {\r\n  font-size: 14px;\r\n  color: #d14343;\r\n  margin-right: 2px;\r\n}\r\n\r\n.price-value {\r\n  font-size: 18px;\r\n  color: #d14343;\r\n  font-weight: 600;\r\n}\r\n\r\n.rating-tag {\r\n  display: flex;\r\n  align-items: center;\r\n  background: #f8f5f2;\r\n  padding: 4px 8px;\r\n  border-radius: 4px;\r\n}\r\n\r\n.rating-icon {\r\n  color: #ffb400;\r\n  margin-right: 4px;\r\n}\r\n\r\n.rating-value {\r\n  font-size: 14px;\r\n  color: #59493f;\r\n  font-weight: 500;\r\n}\r\n\r\n.empty-tip {\r\n  padding: 80px 0;\r\n}\r\n\r\n.image-placeholder {\r\n  background: #f8f5f2;\r\n  color: #c5b6a9;\r\n  font-size: 40px;\r\n}\r\n</style>"],"mappings":";;;;AAwEA;EACAA