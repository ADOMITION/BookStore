{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  name: 'TopBar',\n  data() {\n    return {\n      avatarUrl: require('@/assets/default-avatar.png'),\n      loginStatus: false,\n      user: {}\n    };\n  },\n  created() {\n    this.checkLoginStatus();\n  },\n  watch: {\n    // 监听路由变化更新状态\n    $route() {\n      this.checkLoginStatus();\n    }\n  },\n  methods: {\n    checkLoginStatus() {\n      try {\n        const userData = sessionStorage.getItem('CurUser');\n        if (userData) {\n          this.user = JSON.parse(userData); // 解析JSON字符串\n          this.loginStatus = true;\n        } else {\n          this.loginStatus = false;\n          this.user = null;\n        }\n      } catch (e) {\n        console.error('用户数据解析失败:', e);\n        sessionStorage.removeItem('CurUser');\n        this.loginStatus = false;\n        this.user = null;\n      }\n    },\n    goLogin() {\n      this.$router.push('/login');\n    },\n    goRegister() {\n      this.$router.push('/register');\n    },\n    /* goUserCenter() {\r\n       this.$router.push('/user/center')\r\n     },\r\n    */\n    goOrder() {\n      this.$router.push('/order');\n    },\n    logout() {\n      this.$confirm('确定要退出登录吗？', '提示', {\n        confirmButtonText: '确定',\n        cancelButtonText: '取消',\n        type: 'warning'\n      }).then(() => {\n        sessionStorage.removeItem('CurUser');\n        this.$message.success('退出成功');\n        this.checkLoginStatus();\n        this.$router.push('/login');\n      }).catch(() => {});\n    }\n  }\n};","map":{"version":3,"names":["name","data","avatarUrl","require","loginStatus","user","created","checkLoginStatus","watch","$route","methods","userData","sessionStorage","getItem","JSON","parse","e","console","error","removeItem","goLogin","$router","push","goRegister","goOrder","logout","$confirm","confirmButtonText","cancelButtonText","type","then","$message","success","catch"],"sources":["src/user/TopBar.vue"],"sourcesContent":["<template>\r\n  <el-row class=\"top-bar-container\">\r\n    <el-col :span=\"24\">\r\n      <div class=\"nav-wrapper\">\r\n        <!-- 左侧企业标识 -->\r\n        <div class=\"logo-area\">\r\n          <span class=\"shop-name\">云端书城</span>\r\n        </div>\r\n        <!-- 右侧功能区域 -->\r\n        <div class=\"right-menu\">\r\n          <!-- 登录状态 -->\r\n          <template v-if=\"loginStatus\">\r\n            <el-dropdown trigger=\"hover\" placement=\"bottom\">\r\n              <div class=\"user-info\">\r\n                <el-avatar :size=\"30\" :src=\"avatarUrl\" class=\"user-avatar\"></el-avatar>\r\n                <span class=\"username\">{{  user ? user.name : ''  }}</span>\r\n                <i class=\"el-icon-caret-bottom\"></i>\r\n              </div>\r\n              <el-dropdown-menu slot=\"dropdown\">\r\n                <el-dropdown-item @click.native=\"goUserCenter\">\r\n                  <i class=\"el-icon-user\"></i>个人中心\r\n                </el-dropdown-item>\r\n                <el-dropdown-item @click.native=\"goOrder\">\r\n                  <i class=\"el-icon-tickets\"></i>我的订单\r\n                </el-dropdown-item>\r\n                <el-dropdown-item divided @click.native=\"logout\">\r\n                  <i class=\"el-icon-switch-button\"></i>退出登录\r\n                </el-dropdown-item>\r\n              </el-dropdown-menu>\r\n            </el-dropdown>\r\n          </template>\r\n\r\n          <!-- 未登录状态 -->\r\n          <template v-else>\r\n            <el-button type=\"text\" @click=\"goLogin\" class=\"menu-item\">登录</el-button>\r\n            <el-button type=\"text\" @click=\"goRegister\" class=\"menu-item\">注册</el-button>\r\n          </template>\r\n\r\n          <!-- 通用功能 -->\r\n          <el-button type=\"text\"  class=\"menu-item\">\r\n            <i class=\"el-icon-service\"></i>读者之家\r\n          </el-button>\r\n          <el-button type=\"text\"  class=\"menu-item\">\r\n            <i class=\"el-icon-service\"></i>购物车\r\n          </el-button>\r\n          <el-dropdown trigger=\"hover\" class=\"menu-item\">\r\n            <span class=\"dropdown-link\">\r\n              <i class=\"el-icon-mobile\"></i>APP下载\r\n            </span>\r\n            <el-dropdown-menu slot=\"dropdown\">\r\n              <el-dropdown-item>\r\n                <i class=\"el-icon-apple\"></i>iOS版\r\n              </el-dropdown-item>\r\n              <el-dropdown-item>\r\n                <i class=\"el-icon-android\"></i>Android版\r\n              </el-dropdown-item>\r\n            </el-dropdown-menu>\r\n          </el-dropdown>\r\n        </div>\r\n      </div>\r\n    </el-col>\r\n  </el-row>\r\n</template>\r\n\r\n\r\n<script>\r\nexport default {\r\n  name: 'TopBar',\r\n  data() {\r\n    return {\r\n      avatarUrl: require('@/assets/default-avatar.png'),\r\n      loginStatus: false,\r\n      user: {}\r\n    }\r\n  },\r\n  created() {\r\n    this.checkLoginStatus()\r\n  },\r\n  watch: {\r\n    // 监听路由变化更新状态\r\n    $route() {\r\n      this.checkLoginStatus()\r\n    }\r\n  },\r\n  methods: {\r\n    checkLoginStatus() {\r\n      try {\r\n        const userData = sessionStorage.getItem('CurUser')\r\n        if (userData) {\r\n          this.user = JSON.parse(userData) // 解析JSON字符串\r\n          this.loginStatus = true\r\n        } else {\r\n          this.loginStatus = false\r\n          this.user = null\r\n        }\r\n      } catch (e) {\r\n        console.error('用户数据解析失败:', e)\r\n        sessionStorage.removeItem('CurUser')\r\n        this.loginStatus = false\r\n        this.user = null\r\n      }\r\n\r\n    },\r\n\r\n    goLogin() {\r\n      this.$router.push('/login')\r\n    },\r\n    goRegister() {\r\n      this.$router.push('/register')\r\n    },\r\n    /* goUserCenter() {\r\n       this.$router.push('/user/center')\r\n     },\r\n */\r\n    goOrder() {\r\n      this.$router.push('/order')\r\n    },\r\n\r\n\r\n    logout() {\r\n      this.$confirm('确定要退出登录吗？', '提示', {\r\n        confirmButtonText: '确定',\r\n        cancelButtonText: '取消',\r\n        type: 'warning'\r\n      }).then(() => {\r\n        sessionStorage.removeItem('CurUser')\r\n        this.$message.success('退出成功')\r\n        this.checkLoginStatus()\r\n        this.$router.push('/login')\r\n      }).catch(() => {})\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n\r\n<style scoped>\r\n/* 基础容器 */\r\n.top-bar-container {\r\n  background: #ffffff;\r\n  box-shadow: 0 2px 16px rgba(0, 0, 0, 0.08);\r\n  height: 64px;\r\n  transition: all 0.3s ease;\r\n}\r\n\r\n/* 品牌标识 */\r\n.logo-area {\r\n  padding-left: 8px;\r\n}\r\n\r\n.shop-name {\r\n  color: #2c3e50;\r\n  font-size: 24px;\r\n  font-weight: 600;\r\n  letter-spacing: -0.5px;\r\n  position: relative;\r\n}\r\n\r\n.shop-name::after {\r\n  content: '';\r\n  position: absolute;\r\n  bottom: -4px;\r\n  left: 0;\r\n  width: 40px;\r\n  height: 3px;\r\n  background: #3498db;\r\n}\r\n\r\n/* 右侧菜单 */\r\n.right-menu {\r\n  gap: 20px;\r\n}\r\n\r\n.menu-item {\r\n  color: #5a6d80 !important;\r\n  font-weight: 500;\r\n  padding: 8px 12px;\r\n  border-radius: 6px;\r\n  transition: all 0.25s ease;\r\n}\r\n\r\n.menu-item:hover {\r\n  color: #3498db !important;\r\n  background: #f8f9fa;\r\n}\r\n\r\n.menu-item i {\r\n  color: #7f8c8d;\r\n  margin-right: 8px;\r\n  transition: inherit;\r\n}\r\n\r\n.menu-item:hover i {\r\n  color: inherit;\r\n}\r\n\r\n/* 用户信息 */\r\n.user-info {\r\n  padding: 6px 12px;\r\n  border-radius: 8px;\r\n  border: 1px solid #ecf0f1;\r\n}\r\n\r\n.user-avatar {\r\n  border: 2px solid #e0e0e0;\r\n  transition: transform 0.3s ease;\r\n}\r\n\r\n.user-info:hover .user-avatar {\r\n  transform: scale(1.08);\r\n  border-color: #3498db;\r\n}\r\n\r\n.username {\r\n  color: #34495e;\r\n  font-weight: 500;\r\n}\r\n\r\n/* 下拉菜单 */\r\n.el-dropdown-menu {\r\n  border-radius: 8px !important;\r\n  box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1) !important;\r\n  border: 1px solid #eee !important;\r\n}\r\n\r\n.el-dropdown-menu__item {\r\n  color: #636e72 !important;\r\n  padding: 12px 20px !important;\r\n}\r\n\r\n.el-dropdown-menu__item:hover {\r\n  background: #f8f9fa !important;\r\n  color: #3498db !important;\r\n}\r\n\r\n/* 移动端适配 */\r\n@media (max-width: 768px) {\r\n  .top-bar-container {\r\n    height: auto;\r\n    padding: 12px 0;\r\n  }\r\n\r\n  .nav-wrapper {\r\n    flex-direction: column;\r\n    gap: 12px;\r\n  }\r\n\r\n  .shop-name {\r\n    font-size: 20px;\r\n  }\r\n\r\n  .right-menu {\r\n    flex-wrap: wrap;\r\n    justify-content: center;\r\n    gap: 12px;\r\n  }\r\n\r\n  .menu-item {\r\n    padding: 6px 10px;\r\n    font-size: 13px;\r\n  }\r\n}\r\n\r\n/* 动态效果 */\r\n@keyframes subtleFloat {\r\n  0%, 100% { transform: translateY(0); }\r\n  50% { transform: translateY(-2px); }\r\n}\r\n\r\n.user-info:hover {\r\n  animation: subtleFloat 1.2s ease infinite;\r\n}\r\n\r\n.el-dropdown-menu__item {\r\n  transition: transform 0.2s ease;\r\n}\r\n\r\n.el-dropdown-menu__item:hover {\r\n  transform: translateX(4px);\r\n}\r\n</style>"],"mappings":";AAkEA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,SAAA,EAAAC,OAAA;MACAC,WAAA;MACAC,IAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,gBAAA;EACA;EACAC,KAAA;IACA;IACAC,OAAA;MACA,KAAAF,gBAAA;IACA;EACA;EACAG,OAAA;IACAH,iBAAA;MACA;QACA,MAAAI,QAAA,GAAAC,cAAA,CAAAC,OAAA;QACA,IAAAF,QAAA;UACA,KAAAN,IAAA,GAAAS,IAAA,CAAAC,KAAA,CAAAJ,QAAA;UACA,KAAAP,WAAA;QACA;UACA,KAAAA,WAAA;UACA,KAAAC,IAAA;QACA;MACA,SAAAW,CAAA;QACAC,OAAA,CAAAC,KAAA,cAAAF,CAAA;QACAJ,cAAA,CAAAO,UAAA;QACA,KAAAf,WAAA;QACA,KAAAC,IAAA;MACA;IAEA;IAEAe,QAAA;MACA,KAAAC,OAAA,CAAAC,IAAA;IACA;IACAC,WAAA;MACA,KAAAF,OAAA,CAAAC,IAAA;IACA;IACA;AACA;AACA;AACA;IACAE,QAAA;MACA,KAAAH,OAAA,CAAAC,IAAA;IACA;IAGAG,OAAA;MACA,KAAAC,QAAA;QACAC,iBAAA;QACAC,gBAAA;QACAC,IAAA;MACA,GAAAC,IAAA;QACAlB,cAAA,CAAAO,UAAA;QACA,KAAAY,QAAA,CAAAC,OAAA;QACA,KAAAzB,gBAAA;QACA,KAAAc,OAAA,CAAAC,IAAA;MACA,GAAAW,KAAA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}