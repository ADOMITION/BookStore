{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { formatDate } from '@/store/formatDate';\nexport default {\n  filters: {\n    formatDate(time) {\n      return formatDate(new Date(time), 'yyyy-MM-dd hh:mm');\n    }\n  },\n  data() {\n    return {\n      bean: {\n        status: 1,\n        stock: 0,\n        price: 0,\n        press: '',\n        date: '',\n        info: ''\n      },\n      review: [],\n      num: 1,\n      activeNames: ['reviews']\n    };\n  },\n  computed: {\n    getStockText() {\n      if (this.bean.status === 0) return '商品已下架';\n      return this.bean.stock > 0 ? `库存 ${this.bean.stock} 件` : '暂时缺货';\n    },\n    getDiscountText() {\n      if (this.bean.stock >= 20 && this.bean.stock <= 25) {\n        return '八折优惠';\n      } else if (this.bean.stock >= 15 && this.bean.stock < 20) {\n        return '九折优惠';\n      } else if (this.bean.stock > 25) {\n        return '七折优惠';\n      }\n      return '';\n    }\n  },\n  created() {\n    this.loadBookDetail();\n  },\n  methods: {\n    async loadBookDetail() {\n      try {\n        const {\n          data\n        } = await this.$axios.get(this.$httpUrl + `/book/${this.$route.query.id}`);\n        if (data.code === 200) {\n          this.bean = {\n            // 初始化默认值\n            url: require('@/assets/default-book.png'),\n            status: 1,\n            stock: 0,\n            price: 0,\n            press: '',\n            date: '',\n            info: '',\n            ...data.data.product\n          };\n          this.review = data.data.reviews || [];\n          this.calculateDiscount();\n        }\n      } catch (error) {\n        this.$message.error('获取书籍详情失败');\n      }\n    },\n    calculateDiscount() {\n      if (this.bean.stock >= 20 && this.bean.stock <= 25) {\n        this.bean.discountPrice = (this.bean.price * 0.8).toFixed(2);\n      } else if (this.bean.stock >= 15 && this.bean.stock < 20) {\n        this.bean.discountPrice = (this.bean.price * 0.9).toFixed(2);\n      } else if (this.bean.stock > 25) {\n        this.bean.discountPrice = (this.bean.price * 0.7).toFixed(2);\n      } else {\n        this.bean.discountPrice = this.bean.price;\n      }\n    },\n    handleBuyNow() {\n      if (!this.checkLogin()) return;\n      // 购买逻辑\n      let pid = this.bean.id;\n      let url = `/buy?pid=${pid}&num=${this.num}`;\n      this.axios.get(this.$httpUrl + url).then(response => {\n        let oiid = response.data;\n        this.$router.push({\n          path: '/confirm',\n          query: {\n            oiid: oiid\n          }\n        });\n      });\n    },\n    handleAddCart() {\n      if (!this.checkLogin()) return;\n      // 购物车逻辑\n      let pid = this.bean.id;\n      let url = `/addCart?pid=${pid}&num=${this.num}`;\n      this.axios.get(this.$httpUrl + url).then(response => {\n        let result = response.data;\n        if (200 === result.code) {\n          this.$message('已加入购物车');\n        }\n      });\n    },\n    checkLogin() {\n      if (!sessionStorage.getItem('CurUser')) {\n        this.$router.push('/login');\n        return false;\n      }\n      return true;\n    }\n  }\n};","map":{"version":3,"names":["formatDate","filters","time","Date","data","bean","status","stock","price","press","date","info","review","num","activeNames","computed","getStockText","getDiscountText","created","loadBookDetail","methods","$axios","get","$httpUrl","$route","query","id","code","url","require","product","reviews","calculateDiscount","error","$message","discountPrice","toFixed","handleBuyNow","checkLogin","pid","axios","then","response","oiid","$router","push","path","handleAddCart","result","sessionStorage","getItem"],"sources":["src/user/BookPage.vue"],"sourcesContent":["<template>\r\n  <div class=\"book-detail-container\">\r\n    <el-row :gutter=\"40\" class=\"book-info-row\">\r\n      <!-- 封面图片 -->\r\n      <el-col :span=\"6\" :offset=\"6\">\r\n        <!-- 图片加载错误我们添加默认图片 -->\r\n        <el-image\r\n            :src=\"bean.url || require('@/assets/default-book.png')\"\r\n            style=\"height: 368px;width: 260px\"\r\n            fit=\"contain\"\r\n            class=\"book-cover\"\r\n        >\r\n          <div slot=\"error\" class=\"cover-error\">\r\n            <i class=\"el-icon-picture-outline\"></i>\r\n          </div>\r\n        </el-image>\r\n      </el-col>\r\n\r\n      <!-- 书籍信息 -->\r\n      <el-col :span=\"6\" class=\"book-meta\">\r\n        <h2 class=\"book-title\">{{ bean.name }}</h2>\r\n        <p class=\"book-author\">{{ bean.author }}</p>\r\n        <p class=publish-info>出版社：{{ bean.press }}</p>\r\n        <p class=publish-date>出版日期：{{ bean.date }}</p>\r\n        <div class=\"price-section\">\r\n          <span v-if=\"bean.discountPrice!== bean.price\" class=\"original-price\">¥{{ bean.price }}</span>\r\n          <span class=\"current-price\">¥{{ bean.discountPrice }}</span>\r\n          <el-tag v-if=\"bean.discountPrice!== bean.price\" type=\"success\" class=\"discount-tag\">\r\n            {{ getDiscountText }}\r\n          </el-tag>\r\n          <el-tag v-if=\"bean.status === 0\" type=\"danger\" class=\"status-tag\">已下架</el-tag>\r\n        </div>\r\n\r\n        <div class=\"stock-section\">\r\n          <el-input-number\r\n              v-model=\"num\"\r\n              :min=\"1\"\r\n              :max=\"bean.stock\"\r\n              :disabled=\"bean.stock <= 0 || bean.status === 0\"\r\n          />\r\n          <span\r\n              class=\"stock-text\"\r\n              :class=\"{ 'no-stock': bean.stock <= 0 || bean.status === 0 }\"\r\n          >\r\n            {{ getStockText }}\r\n          </span>\r\n        </div>\r\n\r\n        <div class=\"action-buttons\">\r\n          <el-button\r\n              type=\"warning\"\r\n              :disabled=\"bean.stock <= 0 || bean.status === 0\"\r\n              @click=\"handleAddCart\"\r\n          >\r\n            加入购物车\r\n          </el-button>\r\n          <el-button\r\n              type=\"danger\"\r\n              :disabled=\"bean.stock <= 0 || bean.status === 0\"\r\n              @click=\"handleBuyNow\"\r\n          >\r\n            立即购买\r\n          </el-button>\r\n        </div>\r\n      </el-col>\r\n    </el-row>\r\n\r\n    <!-- 书籍描述 -->\r\n    <el-row class=\"book-description\">\r\n      <el-col :span=\"18\" :offset=\"3\">\r\n        <el-card>\r\n          <h3>书籍简介</h3>\r\n          <p class=\"description-text\">{{ bean.info }}</p>\r\n        </el-card>\r\n      </el-col>\r\n    </el-row>\r\n\r\n    <!-- 评论区域 -->\r\n    <el-row class=\"review-section\">\r\n      <el-col :span=\"18\" :offset=\"3\">\r\n        <el-collapse v-model=\"activeNames\">\r\n          <el-collapse-item name=\"reviews\">\r\n            <template slot=\"title\">\r\n              <i class=\"el-icon-chat-dot-round\"></i>\r\n              书友评价（{{ bean.reviewCount || 0 }}）\r\n            </template>\r\n\r\n            <div v-if=\"review.length === 0\" class=\"no-reviews\">\r\n              还没有评论，快来抢沙发吧~\r\n            </div>\r\n\r\n            <div v-else class=\"review-list\">\r\n              <el-card v-for=\"item in review\" :key=\"item.id\" class=\"review-item\">\r\n                <el-tag>{{ item.userName }}</el-tag>\r\n                <p>{{ item.content }}</p>\r\n                <el-tag type=\"info\" style=\"text-align: right\">\r\n                  {{ item.createtime | formatDate }}\r\n                </el-tag>\r\n              </el-card>\r\n            </div>\r\n          </el-collapse-item>\r\n        </el-collapse>\r\n      </el-col>\r\n    </el-row>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { formatDate } from '@/store/formatDate'\r\n\r\nexport default {\r\n  filters: {\r\n    formatDate(time) {\r\n      return formatDate(new Date(time), 'yyyy-MM-dd hh:mm')\r\n    }\r\n  },\r\n  data() {\r\n    return {\r\n      bean: {\r\n        status: 1,\r\n        stock: 0,\r\n        price: 0,\r\n        press: '',\r\n        date: '',\r\n        info: ''\r\n      },\r\n      review: [],\r\n      num: 1,\r\n      activeNames: ['reviews']\r\n    }\r\n  },\r\n\r\n  computed: {\r\n    getStockText() {\r\n      if (this.bean.status === 0) return '商品已下架'\r\n      return this.bean.stock > 0 ? `库存 ${this.bean.stock} 件` : '暂时缺货'\r\n    },\r\n    getDiscountText() {\r\n      if (this.bean.stock >= 20 && this.bean.stock <= 25) {\r\n        return '八折优惠'\r\n      } else if (this.bean.stock >= 15 && this.bean.stock < 20) {\r\n        return '九折优惠'\r\n      }else if(this.bean.stock > 25){\r\n        return '七折优惠'\r\n      }\r\n      return ''\r\n    }\r\n  },\r\n\r\n  created() {\r\n    this.loadBookDetail()\r\n  },\r\n\r\n  methods: {\r\n    async loadBookDetail() {\r\n      try {\r\n        const { data } = await this.$axios.get(this.$httpUrl + `/book/${this.$route.query.id}`)\r\n        if (data.code === 200) {\r\n          this.bean = {\r\n            // 初始化默认值\r\n            url: require('@/assets/default-book.png'),\r\n            status: 1,\r\n            stock: 0,\r\n            price: 0,\r\n            press: '',\r\n            date: '',\r\n            info: '',\r\n            ...data.data.product\r\n          }\r\n          this.review = data.data.reviews || []\r\n          this.calculateDiscount()\r\n        }\r\n      } catch (error) {\r\n        this.$message.error('获取书籍详情失败')\r\n      }\r\n    },\r\n\r\n    calculateDiscount() {\r\n      if (this.bean.stock >= 20 && this.bean.stock <= 25) {\r\n        this.bean.discountPrice = (this.bean.price * 0.8).toFixed(2)\r\n      } else if (this.bean.stock >= 15 && this.bean.stock < 20) {\r\n        this.bean.discountPrice = (this.bean.price * 0.9).toFixed(2)\r\n      } else if (this.bean.stock > 25) {\r\n        this.bean.discountPrice = (this.bean.price * 0.7).toFixed(2)\r\n      }else {\r\n        this.bean.discountPrice = this.bean.price\r\n      }\r\n    },\r\n\r\n    handleBuyNow() {\r\n      if (!this.checkLogin()) return\r\n      // 购买逻辑\r\n      let pid = this.bean.id\r\n      let url = `/buy?pid=${pid}&num=${this.num}`\r\n      this.axios.get(this.$httpUrl + url).then(response => {\r\n        let oiid = response.data\r\n        this.$router.push({\r\n          path: '/confirm',\r\n          query: {\r\n            oiid: oiid\r\n          }\r\n        })\r\n      })\r\n    },\r\n\r\n    handleAddCart() {\r\n      if (!this.checkLogin()) return\r\n      // 购物车逻辑\r\n      let pid = this.bean.id\r\n      let url = `/addCart?pid=${pid}&num=${this.num}`\r\n      this.axios.get(this.$httpUrl + url)\r\n          .then(response => {\r\n            let result = response.data\r\n            if (200 === result.code) {\r\n              this.$message('已加入购物车')\r\n            }\r\n          })\r\n    },\r\n\r\n    checkLogin() {\r\n      if (!sessionStorage.getItem('CurUser')) {\r\n        this.$router.push('/login')\r\n        return false\r\n      }\r\n      return true\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.book-detail-container {\r\n  padding: 40px 0;\r\n  background-color: #f9f9f9;\r\n}\r\n\r\n.book-cover {\r\n  border-radius: 16px;\r\n  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);\r\n  transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);\r\n  background: #fff;\r\n  padding: 8px;\r\n}\r\n.book-cover:hover {\r\n  transform: scale(1.05);\r\n}\r\n/*主题*/\r\n.book-title {\r\n  font-size: 32px;\r\n  color: #2b2f36;\r\n  margin-bottom: 12px;\r\n  font-weight: 700;\r\n  letter-spacing: -0.5px;\r\n  position: relative;\r\n  display: inline-block;\r\n}\r\n.book-title::after {\r\n  content: \"\";\r\n  position: absolute;\r\n  bottom: -4px;\r\n  left: 0;\r\n  width: 60px;\r\n  height: 3px;\r\n  background: #ff6b6b;\r\n  border-radius: 2px;\r\n}\r\n/*作者*/\r\n.book-author {\r\n  color: #6c757d;\r\n  font-size: 18px;\r\n  margin-bottom: 24px;\r\n  position: relative;\r\n  padding-left: 24px;\r\n}\r\n.book-author::before {\r\n  content: \"🐼\";\r\n  position: absolute;\r\n  left: 0;\r\n  top: 1px;\r\n  color: #adb5bd;\r\n}\r\n/*价格*/\r\n.price-section {\r\n  margin: 15px 0;\r\n  