{"ast":null,"code":"import { getReviewList, updateStatus, deleteReview } from '@/api/review';\nexport default {\n  filters: {\n    statusFilter(status) {\n      const statusMap = {\n        1: 'success',\n        0: 'danger'\n      };\n      return statusMap[status];\n    },\n    statusText(status) {\n      const statusMap = {\n        1: '已通过',\n        0: '未通过'\n      };\n      return statusMap[status];\n    }\n  },\n  data() {\n    return {\n      reviewList: [],\n      total: 0,\n      pageNum: 1,\n      pageSize: 10,\n      searchQuery: {\n        bookId: ''\n      }\n    };\n  },\n  created() {\n    this.getList();\n  },\n  methods: {\n    async getList() {\n      const params = {\n        pageNum: this.pageNum,\n        pageSize: this.pageSize,\n        param: {\n          bookId: this.searchQuery.bookId\n        }\n      };\n      const res = await getReviewList(params);\n      if (res.code === 200) {\n        this.reviewList = res.data;\n        this.total = res.total;\n      }\n    },\n    formatTime(time) {\n      return this.$moment(time).format('YYYY-MM-DD HH:mm:ss');\n    },\n    handleFilter() {\n      this.pageNum = 1;\n      this.getList();\n    },\n    handleSizeChange(val) {\n      this.pageSize = val;\n      this.getList();\n    },\n    handleCurrentChange(val) {\n      this.pageNum = val;\n      this.getList();\n    },\n    async handleApprove(id) {\n      const res = await updateStatus({\n        id,\n        status: 1\n      });\n      if (res.code === 200) {\n        this.$message.success('审核通过');\n        this.getList();\n      }\n    },\n    async handleDelete(id) {\n      this.$confirm('确定删除该评论？', '提示', {\n        confirmButtonText: '确定',\n        cancelButtonText: '取消',\n        type: 'warning'\n      }).then(async () => {\n        const res = await deleteReview({\n          id\n        });\n        if (res.code === 200) {\n          this.$message.success('删除成功');\n          this.getList();\n        }\n      });\n    }\n  }\n};","map":{"v