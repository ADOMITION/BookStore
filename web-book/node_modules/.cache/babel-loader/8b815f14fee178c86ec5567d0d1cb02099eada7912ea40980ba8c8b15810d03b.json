{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  name: \"SearchPage\",\n  data() {\n    return {\n      loading: true,\n      beans: [],\n      total: 0,\n      pageNum: 1,\n      pageSize: 12\n    };\n  },\n  created() {\n    this.refresh();\n  },\n  watch: {\n    '$route'() {\n      this.refresh();\n    }\n  },\n  methods: {\n    async refresh() {\n      this.loading = true;\n      try {\n        const res = await this.$axios.post(this.$httpUrl + '/book/search', {\n          pageNum: this.pageNum,\n          pageSize: this.pageSize,\n          param: {\n            keyword: this.$route.query.keyword\n          }\n        });\n        this.beans = res.data.records;\n        this.total = res.data.total;\n        console.log(res);\n      } catch (error) {\n        this.$message.error('搜索失败，请稍后重试');\n      }\n    },\n    handlePageChange(page) {\n      this.pageNum = page;\n      this.refresh();\n    },\n    handleSizeChange(size) {\n      this.pageSize = size;\n      this.refresh();\n    },\n    handleSkip(id) {\n      this.$router.push({\n        path: '/book',\n        query: {\n          id\n        }\n      });\n    }\n  }\n};","map":{"version":3,"names":["name","data","loading","beans","total","pageNum","pageSize","created","refresh","watch","$route","methods","res","$axios","post","$httpUrl","param","keyword","query","records","console","log","error","$message","handlePageChange","page","handleSizeChange","size","handleSkip","id","$router","push","path"],"sources":["src/user/home/SearchPage.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <div>\r\n      <!--未找到结果-->\r\n      <el-alert\r\n          v-if=\"beans.length === 0 && !loading\"\r\n          title=\"没有相关结果哦，换个关键字如何？\"\r\n          type=\"info\"\r\n          :closable=\"false\"\r\n      />\r\n\r\n      <!--找到结果-->\r\n      <div v-else>\r\n        <div class=\"result-grid\">\r\n          <el-row :gutter=\"30\">\r\n            <el-col\r\n                v-for=\"item in beans\"\r\n                :key=\"item.id\"\r\n                :xs=\"12\" :sm=\"8\" :md=\"6\" :lg=\"4\"\r\n                class=\"result-item\"\r\n            >\r\n\r\n            <el-card\r\n                class=\"book-card\"\r\n                shadow=\"hover\"\r\n                @click.native=\"handleSkip(item.id)\"\r\n            >\r\n              <el-image\r\n                  :src=\"item.image\"\r\n                  class=\"book-cover\"\r\n                  fit=\"cover\"\r\n              >\r\n                <div slot=\"error\" class=\"image-placeholder\">\r\n                  <i class=\"el-icon-picture-outline\"></i>\r\n                </div>\r\n              </el-image>\r\n\r\n              <div class=\"book-info\">\r\n                <p class=\"book-title\">{{ item.name }}</p>\r\n                <p class=\"book-author\">{{ item.author }}</p>\r\n\r\n                <div class=\"meta-info\">\r\n                  <div class=\"price-rating\">\r\n                    <span class=\"price\">¥{{ item.price.toFixed(2) }}</span>\r\n                    <el-rate\r\n                        v-model=\"item.mark\"\r\n                        :max=\"10\"\r\n                        disabled\r\n                        class=\"search-rating\"\r\n                    />\r\n                  </div>\r\n                  <p class=\"book-press\">{{ item.press }}</p>\r\n                </div>\r\n              </div>\r\n            </el-card>\r\n          </el-col>\r\n        </el-row>\r\n      </div>\r\n    </div>\r\n      <!-- 分页 -->\r\n      <el-pagination\r\n          v-if=\"total > 0\"\r\n          background\r\n          layout=\"prev, pager, next, jumper, sizes, total\"\r\n          :page-sizes=\"[12, 24, 48, 96]\"\r\n          :current-page=\"pageNum\"\r\n          :page-size=\"pageSize\"\r\n          :total=\"total\"\r\n          @current-change=\"handlePageChange\"\r\n          @size-change=\"handleSizeChange\"\r\n          class=\"pagination\"\r\n      />\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: \"SearchPage\",\r\n  data() {\r\n    return {\r\n      loading : true,\r\n      beans: [],\r\n      total: 0,\r\n      pageNum: 1,\r\n      pageSize: 12,\r\n    }\r\n  },\r\n  created() {\r\n    this.refresh();\r\n  },\r\n  watch: {\r\n    '$route'() {\r\n      this.refresh();\r\n    }\r\n  },\r\n  methods: {\r\n    async refresh() {\r\n      this.loading = true;\r\n      try {\r\n        const res = (await this.$axios.post(this.$httpUrl + '/book/search', {\r\n          pageNum: this.pageNum,\r\n          pageSize: this.pageSize,\r\n          param: {\r\n            keyword: this.$route.query.keyword\r\n          }\r\n        }));\r\n        \r\n        this.beans = res.data.records;\r\n        this.total = res.data.total;\r\n        console.log(res)\r\n      } catch (error) {\r\n        this.$message.error('搜索失败，请稍后重试');\r\n      }\r\n    },\r\n    handlePageChange(page) {\r\n      this.pageNum = page;\r\n      this.refresh();\r\n    },\r\n    handleSizeChange(size) {\r\n      this.pageSize = size;\r\n      this.refresh();\r\n    },\r\n\r\n    handleSkip(id) {\r\n      this.$router.push({\r\n        path: '/book',\r\n        query: { id }\r\n      });\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.search-header h3 {\r\n  color: #59493f;\r\n  font-size: 22px;\r\n  margin: 0;\r\n}\r\n\r\n.result-grid {\r\n  margin: 20px 0;\r\n}\r\n\r\n.book-card {\r\n  margin-bottom: 30px;\r\n  border-radius: 8px;\r\n  transition: transform 0.3s, box-shadow 0.3s;\r\n}\r\n\r\n.book-card:hover {\r\n  transform: translateY(-5px);\r\n  box-shadow: 0 10px 20px rgba(0,0,0,0.1);\r\n}\r\n\r\n.book-cover {\r\n  height: 250px;\r\n  width: 100%;\r\n  border-radius: 8px 8px 0 0;\r\n}\r\n\r\n.book-info {\r\n  padding: 15px;\r\n}\r\n\r\n.book-title {\r\n  font-size: 15px;\r\n  line-height: 1.4;\r\n  color: #333;\r\n  margin: 0 0 8px;\r\n  display: -webkit-box;\r\n  -webkit-line-clamp: 2;\r\n  -webkit-box-orient: vertical;\r\n  overflow: hidden;\r\n}\r\n\r\n.book-author {\r\n  color: #666;\r\n  font-size: 13px;\r\n  margin: 0 0 10px;\r\n}\r\n\r\n.price-rating {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n}\r\n\r\n.price {\r\n  color: #e4393c;\r\n  font-size: 16px;\r\n  font-weight: bold;\r\n}\r\n\r\n.search-rating {\r\n  display: inline-block;\r\n}\r\n\r\n.book-press {\r\n  color: #999;\r\n  font-size: 12px;\r\n  margin: 8px 0 0;\r\n}\r\n\r\n.pagination {\r\n  margin-top: 30px;\r\n  justify-content: center;\r\n}\r\n\r\n.image-placeholder {\r\n  background: #f5f3f1;\r\n  height: 250px;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  color: #c1b7ad;\r\n  font-size: 40px;\r\n}\r\n</style>"],"mappings":";AA6EA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,OAAA;MACAC,KAAA;MACAC,KAAA;MACAC,OAAA;MACAC,QAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,OAAA;EACA;EACAC,KAAA;IACA,QAAAC,CAAA;MACA,KAAAF,OAAA;IACA;EACA;EACAG,OAAA;IACA,MAAAH,QAAA;MACA,KAAAN,OAAA;MACA;QACA,MAAAU,GAAA,cAAAC,MAAA,CAAAC,IAAA,MAAAC,QAAA;UACAV,OAAA,OAAAA,OAAA;UACAC,QAAA,OAAAA,QAAA;UACAU,KAAA;YACAC,OAAA,OAAAP,MAAA,CAAAQ,KAAA,CAAAD;UACA;QACA;QAEA,KAAAd,KAAA,GAAAS,GAAA,CAAAX,IAAA,CAAAkB,OAAA;QACA,KAAAf,KAAA,GAAAQ,GAAA,CAAAX,IAAA,CAAAG,KAAA;QACAgB,OAAA,CAAAC,GAAA,CAAAT,GAAA;MACA,SAAAU,KAAA;QACA,KAAAC,QAAA,CAAAD,KAAA;MACA;IACA;IACAE,iBAAAC,IAAA;MACA,KAAApB,OAAA,GAAAoB,IAAA;MACA,KAAAjB,OAAA;IACA;IACAkB,iBAAAC,IAAA;MACA,KAAArB,QAAA,GAAAqB,IAAA;MACA,KAAAnB,OAAA;IACA;IAEAoB,WAAAC,EAAA;MACA,KAAAC,OAAA,CAAAC,IAAA;QACAC,IAAA;QACAd,KAAA;UAAAW;QAAA;MACA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}