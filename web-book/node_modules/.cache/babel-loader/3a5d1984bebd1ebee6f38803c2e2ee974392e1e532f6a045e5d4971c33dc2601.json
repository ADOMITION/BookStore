{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport searchBar from \"@/user/home/SearchBar.vue\";\nexport default {\n  name: 'TopBar',\n  components: {\n    searchBar\n  },\n  data() {\n    return {\n      avatarUrl: '',\n      loginStatus: false,\n      user: ''\n    };\n  },\n  created() {\n    this.checkLoginStatus();\n  },\n  watch: {\n    // 监听路由变化更新状态\n    $route() {\n      this.checkLoginStatus();\n    }\n  },\n  methods: {\n    checkLoginStatus() {\n      try {\n        const userData = sessionStorage.getItem('CurUser');\n        if (userData) {\n          const parsedUser = JSON.parse(userData);\n          this.user = parsedUser;\n          this.avatarUrl = parsedUser.avatar; // 设置头像\n          this.loginStatus = true;\n        } else {\n          this.loginStatus = false;\n          this.user = null;\n          this.avatarUrl = ''; // 清空头像\n        }\n      } catch (e) {\n        console.error('用户数据解析失败:', e);\n        sessionStorage.removeItem('CurUser');\n        this.loginStatus = false;\n        this.user = null;\n        this.avatarUrl = '';\n      }\n    },\n    goLogin() {\n      this.$router.push('/login');\n    },\n    goRegister() {\n      this.$router.push('/register');\n    },\n    goUserCenter() {\n      this.$router.push('/center');\n    },\n    goOrder() {\n      this.$router.push('/order');\n    },\n    goReader() {\n      this.$router.push('/reader');\n    },\n    goCart() {\n      this.$router.push('/cart');\n    },\n    goAnnouncement() {\n      this.$router.push('/announcement');\n    },\n    goGuestbook() {\n      this.$router.push('/guestbook');\n    },\n    logout() {\n      this.$confirm('确定要退出登录吗？', '提示', {\n        confirmButtonText: '确定',\n        cancelButtonText: '取消',\n        type: 'warning'\n      }).then(() => {\n        sessionStorage.removeItem('CurUser');\n        this.$message.success('退出成功');\n        this.checkLoginStatus();\n        this.$router.push('/login');\n      }).catch(() => {});\n    }\n  }\n};","map":{"version":3,"names":["searchBar","name","components","data","avatarUrl","loginStatus","user","created","checkLoginStatus","watch","$route","methods","userData","sessionStorage","getItem","parsedUser","JSON","parse","avatar","e","console","error","removeItem","goLogin","$router","push","goRegister","goUserCenter","goOrder","goReader","goCart","goAnnouncement","goGuestbook","logout","$confirm","confirmButtonText","cancelButtonText","type","then","$message","success","catch"],"sources":["src/user/home/TopBar.vue"],"sourcesContent":["<template>\r\n  <el-row class=\"top-bar-container\">\r\n    <el-col :span=\"24\">\r\n      <div class=\"nav-wrapper\">\r\n        <!-- 左侧企业标识 -->\r\n        <div class=\"logo-area\" @click=\"$router.push('/')\">\r\n          <img\r\n              src=\"@/assets/logo.png\"\r\n              class=\"site-logo\"\r\n              alt=\"文华书店logo\"\r\n          >\r\n          <span class=\"shop-name\">文华网上书店</span>\r\n        </div>\r\n        <!-- 右侧功能区域 -->\r\n        <div class=\"right-menu\">\r\n          <!-- 登录状态 -->\r\n          <template v-if=\"loginStatus\">\r\n            <el-dropdown trigger=\"hover\" placement=\"bottom\">\r\n              <div class=\"user-info\">\r\n                <el-avatar :size=\"30\" :src=\"avatarUrl\" class=\"user-avatar\"></el-avatar>\r\n                <span class=\"username\">{{  user ? user.name : ''  }}</span>\r\n                <i class=\"el-icon-caret-bottom\"></i>\r\n              </div>\r\n              <el-dropdown-menu slot=\"dropdown\">\r\n                <el-dropdown-item @click.native=\"goUserCenter\">\r\n                  <i class=\"el-icon-user\"></i>个人中心\r\n                </el-dropdown-item>\r\n                <el-dropdown-item @click.native=\"goOrder\">\r\n                  <i class=\"el-icon-tickets\"></i>我的订单\r\n                </el-dropdown-item>\r\n                <el-dropdown-item divided @click.native=\"logout\">\r\n                  <i class=\"el-icon-switch-button\"></i>退出登录\r\n                </el-dropdown-item>\r\n              </el-dropdown-menu>\r\n            </el-dropdown>\r\n          </template>\r\n\r\n          <!-- 未登录状态 -->\r\n          <template v-else>\r\n            <el-button type=\"text\" @click=\"goLogin\" class=\"menu-item\">登录</el-button>\r\n            <el-button type=\"text\" @click=\"goRegister\" class=\"menu-item\">注册</el-button>\r\n          </template>\r\n\r\n          <!-- 通用功能 -->\r\n          <el-button type=\"text\"  class=\"menu-item\" @click=\"goReader\">\r\n            <i class=\"\"></i>读者之家\r\n          </el-button>\r\n          <el-button type=\"text\"  class=\"menu-item\" @click=\"goCart\">\r\n            <i class=\"\"></i>购物车\r\n          </el-button>\r\n          <el-dropdown trigger=\"hover\" class=\"menu-item\">\r\n            <span class=\"dropdown-link\">\r\n              <i class=\"\"></i>服务\r\n            </span>\r\n            <el-dropdown-menu slot=\"dropdown\">\r\n              <el-dropdown-item @click.native=\"goGuestbook\">\r\n                <i class=\"el-icon-message\"></i>留言\r\n              </el-dropdown-item>\r\n              <el-dropdown-item @click.native=\"goAnnouncement\">\r\n                <i class=\"el-icon-warning\"></i>公告\r\n              </el-dropdown-item>\r\n            </el-dropdown-menu>\r\n          </el-dropdown>\r\n        </div>\r\n      </div>\r\n    </el-col>\r\n  </el-row>\r\n</template>\r\n\r\n\r\n<script>\r\nimport searchBar from \"@/user/home/SearchBar.vue\";\r\n\r\nexport default {\r\n  name: 'TopBar',\r\n  components: {searchBar},\r\n  data() {\r\n    return {\r\n      avatarUrl: '',\r\n      loginStatus: false,\r\n      user: '',\r\n    }\r\n  },\r\n  created() {\r\n    this.checkLoginStatus()\r\n  },\r\n  watch: {\r\n    // 监听路由变化更新状态\r\n    $route() {\r\n      this.checkLoginStatus()\r\n    }\r\n  },\r\n  methods: {\r\n    checkLoginStatus() {\r\n      try {\r\n        const userData = sessionStorage.getItem('CurUser')\r\n        if (userData) {\r\n          const parsedUser = JSON.parse(userData)\r\n          this.user = parsedUser\r\n          this.avatarUrl = parsedUser.avatar // 设置头像\r\n          this.loginStatus = true\r\n        } else {\r\n          this.loginStatus = false\r\n          this.user = null\r\n          this.avatarUrl = '' // 清空头像\r\n        }\r\n      } catch (e) {\r\n        console.error('用户数据解析失败:', e)\r\n        sessionStorage.removeItem('CurUser')\r\n        this.loginStatus = false\r\n        this.user = null\r\n        this.avatarUrl = ''\r\n      }\r\n    },\r\n\r\n    goLogin() {\r\n      this.$router.push('/login')\r\n    },\r\n    goRegister() {\r\n      this.$router.push('/register')\r\n    },\r\n    goUserCenter() {\r\n      this.$router.push('/center')\r\n    },\r\n    goOrder() {\r\n      this.$router.push('/order')\r\n    },\r\n    goReader() {\r\n      this.$router.push('/reader')\r\n    },\r\n    goCart() {\r\n      this.$router.push('/cart')\r\n    },\r\n    goAnnouncement() {\r\n      this.$router.push('/announcement')\r\n    },\r\n    goGuestbook() {\r\n      this.$router.push('/guestbook')\r\n    },\r\n\r\n\r\n    logout() {\r\n      this.$confirm('确定要退出登录吗？', '提示', {\r\n        confirmButtonText: '确定',\r\n        cancelButtonText: '取消',\r\n        type: 'warning'\r\n      }).then(() => {\r\n        sessionStorage.removeItem('CurUser')\r\n        this.$message.success('退出成功')\r\n        this.checkLoginStatus()\r\n        this.$router.push('/login')\r\n      }).catch(() => {})\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n\r\n<style lang=\"scss\" scoped>\r\n/* 更新颜色变量 */\r\n$primary-color: #2c5d2c; // 主色调改为深绿色\r\n$secondary-color: #f0a35c; // 辅助色为暖橙色\r\n$text-primary: #f5f5f5;\r\n$text-hover: #ffd700; // 悬停色改为金色\r\n$background-gradient: linear-gradient(145deg, darken($primary-color, 5%) 0%, $primary-color 100%);\r\n\r\n.top-bar-container {\r\n  background: $background-gradient;\r\n  box-shadow: 0 2px 15px rgba(0, 0, 0, 0.2);\r\n  border-bottom: 2px solid rgba($secondary-color, 0.2);\r\n\r\n  &::after {\r\n    background: linear-gradient(90deg, transparent 0%, rgba($secondary-color, 0.4) 50%, transparent 100%);\r\n  }\r\n}\r\n\r\n.logo-area {\r\n  &:hover {\r\n    .site-logo {\r\n      filter: drop-shadow(0 0 8px rgba($secondary-color, 0.4));\r\n    }\r\n  }\r\n}\r\n\r\n.site-logo {\r\n  width: 40px;\r\n  height: 40px;\r\n  padding: 3px;\r\n  background: rgba(255, 255, 255, 0.1);\r\n  border-radius: 6px;\r\n}\r\n\r\n.shop-name {\r\n  font-family: 'Merriweather', serif; // 使用更优雅的衬线字体\r\n  font-size: 26px;\r\n  background: linear-gradient(45deg, #f0a35c 20%, #ffd700 80%);\r\n  letter-spacing: 1.5px;\r\n  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);\r\n\r\n  &::after {\r\n    background: $secondary-color;\r\n  }\r\n}\r\n\r\n.right-menu {\r\n  .menu-item {\r\n    font-size: 15px;\r\n    letter-spacing: 0.5px;\r\n    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);\r\n\r\n    &::before {\r\n      content: '';\r\n      position: absolute;\r\n      top: 0;\r\n      left: 0;\r\n      width: 100%;\r\n      height: 100%;\r\n      border-radius: 4px;\r\n      background: rgba(255, 255, 255, 0.1);\r\n      opacity: 0;\r\n      transition: opacity 0.3s;\r\n    }\r\n\r\n    &:hover {\r\n      transform: translateY(-2px);\r\n      &::before {\r\n        opacity: 1;\r\n      }\r\n\r\n      i {\r\n        color: $text-hover;\r\n      }\r\n    }\r\n\r\n    // 添加图标\r\n    &.shopping-cart-btn::before {\r\n      content: '\\F217';\r\n      font-family: element-icons;\r\n      margin-right: 6px;\r\n    }\r\n  }\r\n}\r\n\r\n.user-info {\r\n  background: rgba(255, 255, 255, 0.08);\r\n  border: 1px solid rgba(255, 255, 255, 0.1);\r\n\r\n  .user-avatar {\r\n    border: 2px solid $secondary-color;\r\n    padding: 2px;\r\n  }\r\n\r\n  .username {\r\n    font-weight: 500;\r\n  }\r\n}\r\n\r\n.el-dropdown-menu {\r\n  background: darken($primary-color, 5%) !important;\r\n  border: 1px solid rgba($secondary-color, 0.2) !important;\r\n\r\n  .el-dropdown-menu__item {\r\n    &:hover {\r\n      background: rgba($secondary-color, 0.1) !important;\r\n    }\r\n  }\r\n}\r\n\r\n// 新增装饰元素\r\n.nav-wrapper::before {\r\n  content: '';\r\n  position: absolute;\r\n  bottom: -10px;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 10px;\r\n  background: linear-gradient(rgba(0,0,0,0.1), transparent);\r\n}\r\n\r\n// 响应式调整\r\n@media (max-width: 768px) {\r\n  .shop-name {\r\n    font-size: 20px;\r\n  }\r\n\r\n  .right-menu .menu-item {\r\n    margin-left: 15px;\r\n    padding: 6px 8px;\r\n  }\r\n}\r\n</style>"],"mappings":";AAuEA,OAAAA,SAAA;AAEA;EACAC,IAAA;EACAC,UAAA;IAAAF;EAAA;EACAG,KAAA;IACA;MACAC,SAAA;MACAC,WAAA;MACAC,IAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,gBAAA;EACA;EACAC,KAAA;IACA;IACAC,OAAA;MACA,KAAAF,gBAAA;IACA;EACA;EACAG,OAAA;IACAH,iBAAA;MACA;QACA,MAAAI,QAAA,GAAAC,cAAA,CAAAC,OAAA;QACA,IAAAF,QAAA;UACA,MAAAG,UAAA,GAAAC,IAAA,CAAAC,KAAA,CAAAL,QAAA;UACA,KAAAN,IAAA,GAAAS,UAAA;UACA,KAAAX,SAAA,GAAAW,UAAA,CAAAG,MAAA;UACA,KAAAb,WAAA;QACA;UACA,KAAAA,WAAA;UACA,KAAAC,IAAA;UACA,KAAAF,SAAA;QACA;MACA,SAAAe,CAAA;QACAC,OAAA,CAAAC,KAAA,cAAAF,CAAA;QACAN,cAAA,CAAAS,UAAA;QACA,KAAAjB,WAAA;QACA,KAAAC,IAAA;QACA,KAAAF,SAAA;MACA;IACA;IAEAmB,QAAA;MACA,KAAAC,OAAA,CAAAC,IAAA;IACA;IACAC,WAAA;MACA,KAAAF,OAAA,CAAAC,IAAA;IACA;IACAE,aAAA;MACA,KAAAH,OAAA,CAAAC,IAAA;IACA;IACAG,QAAA;MACA,KAAAJ,OAAA,CAAAC,IAAA;IACA;IACAI,SAAA;MACA,KAAAL,OAAA,CAAAC,IAAA;IACA;IACAK,OAAA;MACA,KAAAN,OAAA,CAAAC,IAAA;IACA;IACAM,eAAA;MACA,KAAAP,OAAA,CAAAC,IAAA;IACA;IACAO,YAAA;MACA,KAAAR,OAAA,CAAAC,IAAA;IACA;IAGAQ,OAAA;MACA,KAAAC,QAAA;QACAC,iBAAA;QACAC,gBAAA;QACAC,IAAA;MACA,GAAAC,IAAA;QACAzB,cAAA,CAAAS,UAAA;QACA,KAAAiB,QAAA,CAAAC,OAAA;QACA,KAAAhC,gBAAA;QACA,KAAAgB,OAAA,CAAAC,IAAA;MACA,GAAAgB,KAAA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}