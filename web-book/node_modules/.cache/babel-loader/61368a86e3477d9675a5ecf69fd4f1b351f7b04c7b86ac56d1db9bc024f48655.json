{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  name: \"SearchPage\",\n  data() {\n    return {\n      loading: true,\n      beans: [],\n      total: 0,\n      pageNum: 1,\n      pageSize: 12\n    };\n  },\n  created() {\n    this.refresh();\n  },\n  watch: {\n    '$route'() {\n      this.refresh();\n    }\n  },\n  methods: {\n    async refresh() {\n      this.loading = true;\n      try {\n        const res = await this.$axios.post(this.$httpUrl + '/book/search', {\n          pageNum: this.pageNum,\n          pageSize: this.pageSize,\n          param: {\n            keyword: this.$route.query.keyword\n          }\n        });\n        if (res.data.code === 200) {\n          this.beans = res.data?.data || [];\n          this.total = res.data?.total || 0;\n          console.log(res);\n          console.log(res.data.data);\n        }\n      } catch (error) {\n        this.$message.error('搜索失败，请稍后重试');\n      } finally {\n        this.loading = false;\n      }\n    },\n    handlePageChange(page) {\n      this.pageNum = page;\n      this.refresh();\n    },\n    handleSizeChange(size) {\n      this.pageSize = size;\n      this.refresh();\n    },\n    handleSkip(id) {\n      this.$router.push({\n        path: '/book',\n        query: {\n          id\n        }\n      });\n    }\n  }\n};","map":{"version":3,"names":["name","data","loading","beans","total","pageNum","pageSize","created","refresh","watch","$route","methods","res","$axios","post","$httpUrl","param","keyword","query","code","console","log","error","$message","handlePageChange","page","handleSizeChange","size","handleSkip","id","$router","push","path"],"sources":["src/user/home/SearchPage.vue"],"sourcesContent":["<template>\r\n  <div class=\"search-container\">\r\n    <div v-loading=\"loading\" element-loading-background=\"rgba(255, 255, 255, 0.8)\">\r\n      <!-- 空状态提示 -->\r\n      <el-alert\r\n          v-if=\"!loading && beans.length === 0\"\r\n          title=\"没有找到相关书籍，换个关键词试试吧~\"\r\n          type=\"info\"\r\n          :closable=\"false\"\r\n          class=\"empty-tip\"\r\n      />\r\n\r\n      <!-- 搜索结果区域 -->\r\n      <div v-else class=\"search-content\">\r\n        <!-- 搜索结果列表 -->\r\n        <el-row :gutter=\"30\" class=\"book-list\">\r\n          <el-col\r\n              v-for=\"item in beans\"\r\n              :key=\"item.id\"\r\n              :xs=\"12\" :sm=\"8\" :md=\"6\" :lg=\"4\"\r\n              class=\"book-item\"\r\n          >\r\n            <div class=\"book-wrapper\">\r\n              <el-card\r\n                  class=\"book-card\"\r\n                  shadow=\"hover\"\r\n                  @click.native=\"handleSkip(item.id)\"\r\n              >\r\n                <!-- 封面图片 -->\r\n                <div class=\"cover-container\">\r\n                  <el-image\r\n                      :src=\"item.image\"\r\n                      class=\"book-cover\"\r\n                      fit=\"cover\"\r\n                  >\r\n                    <div slot=\"error\" class=\"image-placeholder\">\r\n                      <i class=\"el-icon-picture-outline\"></i>\r\n                      <span class=\"placeholder-text\">暂无封面</span>\r\n                    </div>\r\n                  </el-image>\r\n                  <div class=\"mark-tag\">{{ item.mark || '0.0' }}</div>\r\n                </div>\r\n\r\n                <!-- 书籍信息 -->\r\n                <div class=\"book-info\">\r\n                  <h3 class=\"book-title\">{{ item.name }}</h3>\r\n                  <p class=\"book-meta\">\r\n                    <span class=\"author\">{{ item.author }}</span>\r\n                    <span class=\"press\">{{ item.press }}</span>\r\n                  </p>\r\n                  <div class=\"price-section\">\r\n                    <span class=\"price\">¥{{ item.price.toFixed(2) }}</span>\r\n                    <el-rate\r\n                        v-model=\"item.mark\"\r\n                        :max=\"10\"\r\n                        disabled\r\n                        :colors=\"['#99A9BF', '#F7BA2A', '#FF9900']\"\r\n                        class=\"rating\"\r\n                    />\r\n                  </div>\r\n                </div>\r\n              </el-card>\r\n            </div>\r\n          </el-col>\r\n        </el-row>\r\n\r\n        <!-- 分页组件 -->\r\n        <el-pagination\r\n            v-if=\"total > 0\"\r\n            background\r\n            layout=\"prev, pager, next, jumper, total\"\r\n            :page-size=\"pageSize\"\r\n            :current-page=\"pageNum\"\r\n            :total=\"total\"\r\n            @current-change=\"handlePageChange\"\r\n            class=\"pagination\"\r\n        />\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n\r\n<script>\r\nexport default {\r\n  name: \"SearchPage\",\r\n  data() {\r\n    return {\r\n      loading : true,\r\n      beans: [],\r\n      total: 0,\r\n      pageNum: 1,\r\n      pageSize: 12,\r\n    }\r\n  },\r\n  created() {\r\n    this.refresh();\r\n  },\r\n  watch: {\r\n    '$route'() {\r\n      this.refresh();\r\n    }\r\n  },\r\n  methods: {\r\n    async refresh() {\r\n      this.loading = true;\r\n      try {\r\n        const res = (await this.$axios.post(this.$httpUrl + '/book/search', {\r\n          pageNum: this.pageNum,\r\n          pageSize: this.pageSize,\r\n          param: {\r\n            keyword: this.$route.query.keyword\r\n          }\r\n        }));\r\n        if (res.data.code === 200) {\r\n          this.beans = res.data?.data || [];\r\n          this.total = res.data?.total || 0;\r\n          console.log(res)\r\n          console.log(res.data.data)\r\n        }\r\n      } catch (error) {\r\n        this.$message.error('搜索失败，请稍后重试');\r\n      }finally {\r\n        this.loading =false\r\n      }\r\n    },\r\n    handlePageChange(page) {\r\n      this.pageNum = page;\r\n      this.refresh();\r\n    },\r\n    handleSizeChange(size) {\r\n      this.pageSize = size;\r\n      this.refresh();\r\n    },\r\n\r\n    handleSkip(id) {\r\n      this.$router.push({\r\n        path: '/book',\r\n        query: { id }\r\n      });\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.search-container {\r\n  max-width: 1200px;\r\n  margin: 0 auto;\r\n  padding: 30px 20px;\r\n  min-height: 80vh;\r\n}\r\n\r\n.empty-tip {\r\n  margin: 50px 0;\r\n  border: 1px solid #ebeef5;\r\n  background: #f8f9fa;\r\n}\r\n\r\n.book-list {\r\n  margin: -15px;\r\n}\r\n\r\n.book-item {\r\n  padding: 15px !important;\r\n}\r\n\r\n.book-wrapper {\r\n  transition: transform 0.3s ease;\r\n}\r\n\r\n.book-wrapper:hover {\r\n  transform: translateY(-5px);\r\n}\r\n\r\n.book-card {\r\n  border-radius: 12px;\r\n  overflow: hidden;\r\n  border: none;\r\n  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);\r\n}\r\n\r\n.book-card:hover {\r\n  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.cover-container {\r\n  position: relative;\r\n  height: 280px;\r\n  background: #f8f9fa;\r\n  overflow: hidden;\r\n}\r\n\r\n.book-cover {\r\n  width: 100%;\r\n  height: 100%;\r\n  transition: transform 0.3s ease;\r\n}\r\n\r\n.book-cover:hover {\r\n  transform: scale(1.05);\r\n}\r\n\r\n.mark-tag {\r\n  position: absolute;\r\n  top: 10px;\r\n  right: 10px;\r\n  background: rgba(255, 165, 0, 0.9);\r\n  color: white;\r\n  padding: 4px 10px;\r\n  border-radius: 4px;\r\n  font-size: 12px;\r\n  font-weight: bold;\r\n}\r\n\r\n.image-placeholder {\r\n  height: 100%;\r\n  display: flex;\r\n  flex-direction: column;\r\n  align-items: center;\r\n  justify-content: center;\r\n  color: #c0c4cc;\r\n  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);\r\n}\r\n\r\n.placeholder-text {\r\n  font-size: 12px;\r\n  margin-top: 8px;\r\n}\r\n\r\n.book-info {\r\n  padding: 20px;\r\n}\r\n\r\n.book-title {\r\n  font-size: 16px;\r\n  color: #2c3e50;\r\n  line-height: 1.4;\r\n  margin: 0 0 12px;\r\n  font-weight: 600;\r\n  display: -webkit-box;\r\n  -webkit-line-clamp: 2;\r\n  -webkit-box-orient: vertical;\r\n  overflow: hidden;\r\n}\r\n\r\n.book-meta {\r\n  font-size: 12px;\r\n  color: #7f8c8d;\r\n  margin: 0 0 15px;\r\n  line-height: 1.6;\r\n}\r\n\r\n.book-meta span {\r\n  display: block;\r\n}\r\n\r\n.press {\r\n  font-size: 11px;\r\n}\r\n\r\n.price-section {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n}\r\n\r\n.price {\r\n  color: #e74c3c;\r\n  font-size: 18px;\r\n  font-weight: bold;\r\n}\r\n\r\n.rating {\r\n  transform: scale(0.8);\r\n  transform-origin: right center;\r\n}\r\n\r\n.pagination {\r\n  margin: 40px 0 20px;\r\n  justify-content: center;\r\n}\r\n\r\n</style>"],"mappings":";AAoFA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,OAAA;MACAC,KAAA;MACAC,KAAA;MACAC,OAAA;MACAC,QAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,OAAA;EACA;EACAC,KAAA;IACA,QAAAC,CAAA;MACA,KAAAF,OAAA;IACA;EACA;EACAG,OAAA;IACA,MAAAH,QAAA;MACA,KAAAN,OAAA;MACA;QACA,MAAAU,GAAA,cAAAC,MAAA,CAAAC,IAAA,MAAAC,QAAA;UACAV,OAAA,OAAAA,OAAA;UACAC,QAAA,OAAAA,QAAA;UACAU,KAAA;YACAC,OAAA,OAAAP,MAAA,CAAAQ,KAAA,CAAAD;UACA;QACA;QACA,IAAAL,GAAA,CAAAX,IAAA,CAAAkB,IAAA;UACA,KAAAhB,KAAA,GAAAS,GAAA,CAAAX,IAAA,EAAAA,IAAA;UACA,KAAAG,KAAA,GAAAQ,GAAA,CAAAX,IAAA,EAAAG,KAAA;UACAgB,OAAA,CAAAC,GAAA,CAAAT,GAAA;UACAQ,OAAA,CAAAC,GAAA,CAAAT,GAAA,CAAAX,IAAA,CAAAA,IAAA;QACA;MACA,SAAAqB,KAAA;QACA,KAAAC,QAAA,CAAAD,KAAA;MACA;QACA,KAAApB,OAAA;MACA;IACA;IACAsB,iBAAAC,IAAA;MACA,KAAApB,OAAA,GAAAoB,IAAA;MACA,KAAAjB,OAAA;IACA;IACAkB,iBAAAC,IAAA;MACA,KAAArB,QAAA,GAAAqB,IAAA;MACA,KAAAnB,OAAA;IACA;IAEAoB,WAAAC,EAAA;MACA,KAAAC,OAAA,CAAAC,IAAA;QACAC,IAAA;QACAd,KAAA;UAAAW;QAAA;MACA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}