{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport searchBar from \"@/user/home/SearchBar.vue\";\nexport default {\n  name: 'TopBar',\n  components: {\n    searchBar\n  },\n  data() {\n    return {\n      avatarUrl: '',\n      loginStatus: false,\n      user: ''\n    };\n  },\n  created() {\n    this.checkLoginStatus();\n  },\n  watch: {\n    // 监听路由变化更新状态\n    $route() {\n      this.checkLoginStatus();\n    }\n  },\n  methods: {\n    checkLoginStatus() {\n      try {\n        const userData = sessionStorage.getItem('CurUser');\n        if (userData) {\n          const parsedUser = JSON.parse(userData);\n          this.user = parsedUser;\n          this.avatarUrl = parsedUser.avatar; // 设置头像\n          this.loginStatus = true;\n        } else {\n          this.loginStatus = false;\n          this.user = null;\n          this.avatarUrl = ''; // 清空头像\n        }\n      } catch (e) {\n        console.error('用户数据解析失败:', e);\n        sessionStorage.removeItem('CurUser');\n        this.loginStatus = false;\n        this.user = null;\n        this.avatarUrl = '';\n      }\n    },\n    goLogin() {\n      this.$router.push('/login');\n    },\n    goRegister() {\n      this.$router.push('/register');\n    },\n    goUserCenter() {\n      this.$router.push('/center');\n    },\n    goOrder() {\n      this.$router.push('/order');\n    },\n    goReader() {\n      this.$router.push('/reader');\n    },\n    goCart() {\n      this.$router.push('/cart');\n    },\n    logout() {\n      this.$confirm('确定要退出登录吗？', '提示', {\n        confirmButtonText: '确定',\n        cancelButtonText: '取消',\n        type: 'warning'\n      }).then(() => {\n        sessionStorage.removeItem('CurUser');\n        this.$message.success('退出成功');\n        this.checkLoginStatus();\n        this.$router.push('/login');\n      }).catch(() => {});\n    }\n  }\n};","map":{"version":3,"names":["searchBar","name","components","data","avatarUrl","loginStatus","user","created","checkLoginStatus","watch","$route","methods","userData","sessionStorage","getItem","parsedUser","JSON","parse","avatar","e","console","error","removeItem","goLogin","$router","push","goRegister","goUserCenter","goOrder","goReader","goCart","logout","$confirm","confirmButtonText","cancelButtonText","type","then","$message","success","catch"],"sources":["src/user/home/TopBar.vue"],"sourcesContent":["<template>\r\n  <el-row class=\"top-bar-container\">\r\n    <el-col :span=\"24\">\r\n      <div class=\"nav-wrapper\">\r\n        <!-- 左侧企业标识 -->\r\n        <div class=\"logo-area\" @click=\"$router.push('/')\">\r\n          <img\r\n              src=\"@/assets/logo.png\"\r\n              class=\"site-logo\"\r\n              alt=\"云端书城logo\"\r\n          >\r\n          <span class=\"shop-name\">文华网上书店</span>\r\n        </div>\r\n        <!-- 右侧功能区域 -->\r\n        <div class=\"right-menu\">\r\n          <!-- 登录状态 -->\r\n          <template v-if=\"loginStatus\">\r\n            <el-dropdown trigger=\"hover\" placement=\"bottom\">\r\n              <div class=\"user-info\">\r\n                <el-avatar :size=\"30\" :src=\"avatarUrl\" class=\"user-avatar\"></el-avatar>\r\n                <span class=\"username\">{{  user ? user.name : ''  }}</span>\r\n                <i class=\"el-icon-caret-bottom\"></i>\r\n              </div>\r\n              <el-dropdown-menu slot=\"dropdown\">\r\n                <el-dropdown-item @click.native=\"goUserCenter\">\r\n                  <i class=\"el-icon-user\"></i>个人中心\r\n                </el-dropdown-item>\r\n                <el-dropdown-item @click.native=\"goOrder\">\r\n                  <i class=\"el-icon-tickets\"></i>我的订单\r\n                </el-dropdown-item>\r\n                <el-dropdown-item divided @click.native=\"logout\">\r\n                  <i class=\"el-icon-switch-button\"></i>退出登录\r\n                </el-dropdown-item>\r\n              </el-dropdown-menu>\r\n            </el-dropdown>\r\n          </template>\r\n\r\n          <!-- 未登录状态 -->\r\n          <template v-else>\r\n            <el-button type=\"text\" @click=\"goLogin\" class=\"menu-item\">登录</el-button>\r\n            <el-button type=\"text\" @click=\"goRegister\" class=\"menu-item\">注册</el-button>\r\n          </template>\r\n\r\n          <!-- 通用功能 -->\r\n          <el-button type=\"text\"  class=\"menu-item\" @click=\"goReader\">\r\n            <i class=\"el-icon-service\"></i>读者之家\r\n          </el-button>\r\n          <el-button type=\"text\"  class=\"menu-item\" @click=\"goCart\">\r\n            <i class=\"el-icon-service\"></i>购物车\r\n          </el-button>\r\n          <el-dropdown trigger=\"hover\" class=\"menu-item\">\r\n            <span class=\"dropdown-link\">\r\n              <i class=\"el-icon-mobile\"></i>APP下载\r\n            </span>\r\n            <el-dropdown-menu slot=\"dropdown\">\r\n              <el-dropdown-item>\r\n                <i class=\"el-icon-apple\"></i>iOS版\r\n              </el-dropdown-item>\r\n              <el-dropdown-item>\r\n                <i class=\"el-icon-android\"></i>Android版\r\n              </el-dropdown-item>\r\n            </el-dropdown-menu>\r\n          </el-dropdown>\r\n        </div>\r\n      </div>\r\n    </el-col>\r\n  </el-row>\r\n</template>\r\n\r\n\r\n<script>\r\nimport searchBar from \"@/user/home/SearchBar.vue\";\r\n\r\nexport default {\r\n  name: 'TopBar',\r\n  components: {searchBar},\r\n  data() {\r\n    return {\r\n      avatarUrl: '',\r\n      loginStatus: false,\r\n      user: '',\r\n    }\r\n  },\r\n  created() {\r\n    this.checkLoginStatus()\r\n  },\r\n  watch: {\r\n    // 监听路由变化更新状态\r\n    $route() {\r\n      this.checkLoginStatus()\r\n    }\r\n  },\r\n  methods: {\r\n    checkLoginStatus() {\r\n      try {\r\n        const userData = sessionStorage.getItem('CurUser')\r\n        if (userData) {\r\n          const parsedUser = JSON.parse(userData)\r\n          this.user = parsedUser\r\n          this.avatarUrl = parsedUser.avatar // 设置头像\r\n          this.loginStatus = true\r\n        } else {\r\n          this.loginStatus = false\r\n          this.user = null\r\n          this.avatarUrl = '' // 清空头像\r\n        }\r\n      } catch (e) {\r\n        console.error('用户数据解析失败:', e)\r\n        sessionStorage.removeItem('CurUser')\r\n        this.loginStatus = false\r\n        this.user = null\r\n        this.avatarUrl = ''\r\n      }\r\n    },\r\n\r\n    goLogin() {\r\n      this.$router.push('/login')\r\n    },\r\n    goRegister() {\r\n      this.$router.push('/register')\r\n    },\r\n     goUserCenter() {\r\n       this.$router.push('/center')\r\n     },\r\n    goOrder() {\r\n      this.$router.push('/order')\r\n    },\r\n    goReader(){\r\n      this.$router.push('/reader')\r\n    },\r\n    goCart(){\r\n      this.$router.push('/cart')\r\n    },\r\n\r\n\r\n    logout() {\r\n      this.$confirm('确定要退出登录吗？', '提示', {\r\n        confirmButtonText: '确定',\r\n        cancelButtonText: '取消',\r\n        type: 'warning'\r\n      }).then(() => {\r\n        sessionStorage.removeItem('CurUser')\r\n        this.$message.success('退出成功')\r\n        this.checkLoginStatus()\r\n        this.$router.push('/login')\r\n      }).catch(() => {})\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n\r\n<style scoped>\r\n.top-bar-container {\r\n  background: linear-gradient(145deg, #3a4750 0%, #2a343a 100%);\r\n  box-shadow: 0 2px 12px rgba(0,0,0,0.1);\r\n  height: 60px;\r\n  line-height: 60px;\r\n}\r\n\r\n.nav-wrapper {\r\n  display: flex;\r\n  justify-content: space-between; /* 关键属性 */\r\n  align-items: center;\r\n  max-width: 1500px;\r\n  margin: 0 auto;\r\n  width: 100%;\r\n}\r\n\r\n/* 左侧标识保持默认左对齐 */\r\n.logo-area {\r\n  display: flex;\r\n  align-items: center;\r\n  gap: 12px;\r\n  cursor: pointer;\r\n}\r\n\r\n.site-logo {\r\n  width: 36px;\r\n  height: 36px;\r\n  object-fit: contain;\r\n  border-radius: 4px;\r\n  transition: transform 0.3s ease;\r\n}\r\n\r\n.site-logo:hover {\r\n  transform: rotate(-5deg) scale(1.05);\r\n}\r\n\r\n.shop-name {\r\n  font-size: 2.2rem;\r\n  font-weight: 600;\r\n  font-family: 'Microsoft YaHei', sans-serif;\r\n  background: linear-gradient(135deg, #faf9f9 30%, #f4d87d 70%);\r\n  -webkit-background-clip: text;\r\n  background-clip: text;\r\n  color: transparent;\r\n  text-shadow: 2px 2px 4px rgba(0,0,0,0.1);\r\n  letter-spacing: 1px;\r\n  position: relative;\r\n  display: inline-block;\r\n  padding: 0 8px;\r\n}\r\n\r\n.right-menu {\r\n  display: flex;\r\n  align-items: center;\r\n  margin-left: auto; /* 新增关键属性 */\r\n  white-space: nowrap; /* 防止换行 */\r\n}\r\n\r\n.menu-item {\r\n  color: #fff;\r\n  margin-left: 25px;\r\n  font-size: 14px;\r\n  transition: color 0.3s;\r\n}\r\n\r\n.menu-item:hover {\r\n  color: #409EFF;\r\n}\r\n\r\n.user-info {\r\n  display: flex;\r\n  align-items: center;\r\n  cursor: pointer;\r\n  padding: 0 10px;\r\n  transition: all 0.3s;\r\n}\r\n\r\n.user-info:hover {\r\n  background: rgba(255,255,255,0.1);\r\n  border-radius: 4px;\r\n}\r\n\r\n.user-avatar {\r\n  margin-right: 8px;\r\n}\r\n\r\n.username {\r\n  color: #fff;\r\n  margin-right: 5px;\r\n  max-width: 100px;\r\n  overflow: hidden;\r\n  text-overflow: ellipsis;\r\n  white-space: nowrap;\r\n}\r\n\r\n.dropdown-link {\r\n  color: #fff;\r\n  cursor: pointer;\r\n  transition: color 0.3s;\r\n}\r\n\r\n.dropdown-link:hover {\r\n  color: #409EFF;\r\n}\r\n\r\n</style>"],"mappings":";AAuEA,OAAAA,SAAA;AAEA;EACAC,IAAA;EACAC,UAAA;IAAAF;EAAA;EACAG,KAAA;IACA;MACAC,SAAA;MACAC,WAAA;MACAC,IAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,gBAAA;EACA;EACAC,KAAA;IACA;IACAC,OAAA;MACA,KAAAF,gBAAA;IACA;EACA;EACAG,OAAA;IACAH,iBAAA;MACA;QACA,MAAAI,QAAA,GAAAC,cAAA,CAAAC,OAAA;QACA,IAAAF,QAAA;UACA,MAAAG,UAAA,GAAAC,IAAA,CAAAC,KAAA,CAAAL,QAAA;UACA,KAAAN,IAAA,GAAAS,UAAA;UACA,KAAAX,SAAA,GAAAW,UAAA,CAAAG,MAAA;UACA,KAAAb,WAAA;QACA;UACA,KAAAA,WAAA;UACA,KAAAC,IAAA;UACA,KAAAF,SAAA;QACA;MACA,SAAAe,CAAA;QACAC,OAAA,CAAAC,KAAA,cAAAF,CAAA;QACAN,cAAA,CAAAS,UAAA;QACA,KAAAjB,WAAA;QACA,KAAAC,IAAA;QACA,KAAAF,SAAA;MACA;IACA;IAEAmB,QAAA;MACA,KAAAC,OAAA,CAAAC,IAAA;IACA;IACAC,WAAA;MACA,KAAAF,OAAA,C